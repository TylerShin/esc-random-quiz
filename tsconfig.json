{
  "compilerOptions": {
    "outDir": "./dst/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2015",
    "module": "es2015",
    "lib": ["es6", "es2016", "dom", "esnext.asynciterable"],
    "removeComments": true,
    "experimentalDecorators": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
